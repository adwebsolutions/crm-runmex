                <field name="runmex_giros" placeholder="Giro de la Empresa"   attrs="{'invisible':[('is_company', '=', False)]}"  options="{'limit': 10, 'create': false, 'create_edit': false}" />
            </field>
          </field>
      </record>
  </data>
</openerp>
